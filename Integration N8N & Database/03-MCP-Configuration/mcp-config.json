{
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres"
      ],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://user:password@host/lbf_techno?sslmode=require"
      },
      "disabled": false,
      "autoApprove": [
        "query",
        "execute",
        "list_tables",
        "describe_table"
      ]
    },
    "tavily-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-tavily"
      ],
      "env": {
        "TAVILY_API_KEY": "tvly-your-api-key-here"
      },
      "disabled": false,
      "autoApprove": [
        "search",
        "search_advanced"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/documents"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "read_file",
        "list_directory"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "fetch"
      ]
    }
  }
}
